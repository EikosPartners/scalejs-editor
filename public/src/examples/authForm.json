{
    "type": "template",
    "template": "div",
    "classes": "viewport",
    "children": [
        {
            "type": "adapter",
            "id": "userAuthForm",
            "template": "div",
            "classes": "form-container",
            "children": [
                {
                    "type": "validations",
                    "classes": "validations"
                },
                {
                    "type": "template",
                    "template": "div",
                    "classes": "form",
                    "children": [
                        {
                            "type": "input",
                            "inputType": "text",
                            "id": "username",
                            "label": "Username",
                            "options": {
                                "validations": {
                                    "required": true
                                }
                            }
                        },
                        {
                            "type": "input",
                            "inputType": "password",
                            "id": "password",
                            "label": "Password",
                            "options": {
                                "validations": {
                                    "required": true
                                }
                            }
                        },
                        {
                            "type": "action",
                            "actionType": "ajax",
                            "text": "Login",
                            "validate": "userAuthForm.validate",
                            "classes": "btn",
                            "options": {
                                "target": {
                                    "uri": "login",
                                    "options": {
                                        "type": "POST"
                                    }
                                },
                                "nextActions": [
                                    {
                                        "type": "action",
                                        "actionType": "popup",
                                        "options": {
                                            "title": "Success",
                                            "message": "You have successfully logged in!"
                                        }
                                    }
                                ],
                                "errorActions": [
                                    {
                                        "type": "action",
                                        "actionType": "event",
                                        "options": {
                                            "target": "userAuthForm.showServerErrors",
                                            "paramsKey": "error"
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                },
                {
                    "type": "route",
                    "route": "Auth Form Register",
                    "text": "Register",
                    "classes": "register btn"
                }
            ]
        }
    ]
}